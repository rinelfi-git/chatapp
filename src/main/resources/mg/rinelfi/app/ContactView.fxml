<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane onMouseClicked="#doOpenDiscussionAction" styleClass="discussion" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mg.rinelfi.app.ContactController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <stylesheets>
      <URL value="@../css/variables.css" />
      <URL value="@../css/main.css" />
      <URL value="@../css/discussion-thread.css" />
   </stylesheets>
   <center>
      <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="321.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true" smooth="false" style="-fx-background-radius: 50%; fx-border-radius: 50%;">
               <image>
                  <Image url="@../img/female-profile.png" />
               </image>
            </ImageView>
            <BorderPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <top>
                  <Label fx:id="username" styleClass="username" text="Nicole Pearson" BorderPane.alignment="CENTER_LEFT" />
               </top>
               <bottom>
                  <Label fx:id="textMessage" styleClass="message" text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus ab corrupti debitis autem nulla laudantium corporis quo exercitationem cumque quasi, mollitia fuga quas explicabo animi veniam recusandae similique laborum accusamus." BorderPane.alignment="CENTER_LEFT" />
               </bottom>
            </BorderPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
